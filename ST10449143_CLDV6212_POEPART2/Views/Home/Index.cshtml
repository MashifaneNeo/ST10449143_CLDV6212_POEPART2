@model ST10449143_CLDV6212_POEPART1.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3">
            <i class="fas fa-store"></i> Welcome to <span class="text-dark">ABC Retailers</span>
        </h1>
        <p class="lead text-muted">ABC Retailers is your trusted source for ensured high-quality products
            and unbeatable deals. We offer a carefully curated selection of items to meet your everyday needs and latest trends,
            all designed to make shopping simple and secure. Explore our featured products, browse our catalog and 
            experience a shopping journey with customer satisfaction at the heart of everything we do.</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Customers</h5>
                    <p class="text-muted">Total: <strong>@Model.CustomerCount</strong></p>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-primary btn-sm w-100">
                        Manage Customers
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Products</h5>
                    <p class="text-muted">Total: <strong>@Model.ProductCount</strong></p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-success btn-sm w-100">
                        Manage Products
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Orders</h5>
                    <p class="text-muted">Total: <strong>@Model.OrderCount</strong></p>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-outline-warning btn-sm w-100">
                        Manage Orders
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-upload fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Uploads</h5>
                    <p class="text-muted">Payment Proofs</p>
                    <a asp-controller="Upload" asp-action="Index" class="btn btn-outline-info btn-sm w-100">
                        Upload Files
                    </a>
                </div>
            </div>
        </div>
    </div>

<!-- Storage Initialization (if needed) -->
@if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
{
    <div class="alert alert-warning">
        <h5><i class="fas fa-exclamation-triangle"></i> First Time Setup</h5>
        <p>It looks like this is your first time running the application. Click the button below to initialize Azure Storage.</p>
        <form asp-action="InitializeStorage" method="post" style="display: inline;">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-cog"></i> Initialize Azure Storage
            </button>
        </form>
    </div>
}

    <!-- Featured Products Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="mb-4 text-dark fw-bold">
                <i class="fas fa-star text-warning"></i> Featured Products
            </h2>

            @if (Model.FeaturedProducts.Any())
            {
                <div class="row justify-content-start">
                    @foreach (var product in Model.FeaturedProducts)
                    {
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title text-center fw-semibold">@product.ProductName</h6>
                                    <p class="card-text small text-muted flex-grow-1 text-center">
                                        @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                    </p>
                                    <div class="mt-auto text-center">
                                        <p class="card-text">
                                            <strong class="text-success">@product.Price.ToString("C")</strong>
                                        </p>
                                        <small class="text-muted">Stock: @product.StockAvailable</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info shadow-sm">
                    <i class="fas fa-info-circle"></i> No products available yet.
                    <a asp-controller="Product" asp-action="Create" class="alert-link">Add your first product</a>!
                </div>
            }
        </div>
    </div>

</div>



