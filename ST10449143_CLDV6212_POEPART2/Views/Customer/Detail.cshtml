@model ST10449143_CLDV6212_POEPART1.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-user"></i> Customer Details</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Customer ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.Surname</dd>

                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Shipping Address</dt>
                <dd class="col-sm-9">@Model.ShippingAddress</dd>
            </dl>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>